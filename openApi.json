{
  "swagger": "2.0",
  "info": {
    "description": "To-Do List Rest Api implementation",
    "version": "1.0",
    "title": "Checklist",
    "contact": { "email": "lea.rieping@outlook.de" }
  },
  "host": "localhost:5000",
  "basePath": "/v1",
  "schemes": ["http"],
  "paths": {
    "/list/{list_id}": {
      "get": {
        "summary": "get a checklist",
        "description": "Liefert alle Einträge einer Todo-Liste zurück.",
        "operationId": "getChecklistById",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "list_id",
            "in": "path",
            "description": "ID of the list to get",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/entry"
              }
            }
          },
          "404": {
            "description": "Resource not found"
          }
        }
      },
      "delete": {
        "summary": "delete a checklist with a given id",
        "description": "Löscht eine komplette Todo-Liste mit allen Einträgen.",
        "operationId": "deleteChecklistById",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "list_id",
            "in": "path",
            "description": "ID of the list to delete",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "checklist deleted"
          },
          "404": {
            "description": "Resource not found"
          }
        }
      }
    },
    "/list": {
      "post": {
        "summary": "create a new list",
        "description": "Fügt eine neue Todo-Liste hinzu.",
        "operationId": "addList",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "list",
            "description": "List object that should be created",
            "required": true,
            "schema": { "$ref": "#/definitions/list" }
          }
        ],
        "responses": {
          "200": {
            "description": "Invalid input",
            "schema": { "$ref": "#/definitions/list" }
          },
          "404": {
            "description": "Resource not found"
          }
        }
      }
    },
    "/list/{list_id}/entry": {
      "post": {
        "summary": "Add an entry to a list",
        "description": "Fügt einen Eintrag zu einer bestehenden Todo-Liste hinzu.",
        "operationId": "addEntry",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "list_id",
            "in": "path",
            "description": "ID of the list",
            "required": true,
            "type": "integer",
            "format": "int64"
          },
          {
            "in": "body",
            "name": "entry",
            "description": "Entry object that should be created",
            "required": true,
            "schema": { "$ref": "#/definitions/entry" }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": { "$ref": "#/definitions/entry" }
          },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/list/{list_id}/entry/{entry_id}": {
      "post": {
        "summary": "Update an entry",
        "description": "Aktualisiert einen bestehenden Eintrag.",
        "operationId": "updateEntry",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "list_id",
            "in": "path",
            "description": "ID of the list",
            "required": true,
            "type": "integer",
            "format": "int64"
          },
          {
            "name": "entry_id",
            "in": "path",
            "description": "id of the entry",
            "required": true,
            "type": "integer",
            "format": "int64"
          },
          {
            "in": "body",
            "name": "entry",
            "description": "Entry object that should be updated",
            "required": true,
            "schema": { "$ref": "#/definitions/entry" }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": { "$ref": "#/definitions/entry" }
          },
          "404": { "description": "Internal Server Error" }
        }
      },
      "delete": {
        "summary": "Delete an entry",
        "description": "Löscht einen einzelnen Eintrag einer Todo-Liste.",
        "operationId": "deleteEntry",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "list_id",
            "in": "path",
            "description": "ID of the list",
            "required": true,
            "type": "integer",
            "format": "int64"
          },
          {
            "name": "entry_id",
            "in": "path",
            "description": "id of the entry",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "404": { "description": "Internal Server Error" }
        }
      }
    },
    "/users": {
      "get": {
        "summary": "Get all users",
        "description": "Liefert eine Liste aller Benutzer zurück.",
        "operationId": "getUsers",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/user"
              }
            }
          }
        }
      }
    },
    "/user": {
      "post": {
        "summary": "Create an user",
        "description": "Liefert eine Liste aller Benutzer zurück.",
        "operationId": "createUser",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "user to be created",
            "required": true,
            "schema": { "$ref": "#/definitions/user" }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": { "$ref": "#/definitions/user" }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/user/{user_id}": {
      "delete": {
        "summary": "Delete an user",
        "description": "Löscht einen Benutzer..",
        "operationId": "deleteUser",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "description": "ID of the user",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "404": { "description": "Resource not found" }
        }
      }
    }
  },
  "definitions": {
    "user": {
      "type": "object",
      "properties": {
        "id": { "type": "integer", "format": "int64" },
        "username": { "type": "string" },
        "firstName": { "type": "string" },
        "lastName": { "type": "string" },
        "email": { "type": "string" }
      }
    },
    "entry": {
      "type": "object",
      "properties": {
        "id": { "type": "integer", "format": "int64" },
        "text": { "type": "string" },
        "status": { "type": "integer", "format": "int32" },
        "user": { "$ref": "#/definitions/user" }
      }
    },
    "list": {
      "type": "object",
      "properties": {
        "id": { "type": "integer", "format": "int64" },
        "name": { "type": "string" },
        "entries": {
          "type": "array",
          "items": { "$ref": "#/definitions/entry" }
        }
      }
    }
  }
}
